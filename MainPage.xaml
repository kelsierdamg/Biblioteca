<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Biblioteca.MainPage">

    <Grid>
        <Image
            Source="library.jpg"
            Aspect="AspectFill"
            Opacity="0.7"/>

        <VerticalStackLayout
            Padding="200"
            Spacing="25">

            <Label
            Text="Biblioteca"
            FontAttributes="Bold"
            FontSize="40"
            HorizontalOptions="Center"
            TextColor="White"/>

            <Label
            Text="IES Valle Inclán"
            FontSize="32"
            HorizontalOptions="Center"
            TextColor="White"
            HorizontalTextAlignment="Center"/>
        </VerticalStackLayout>
    </Grid>
</ContentPage>
